<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>题目</title>
    <% include ../header%>
    <link rel='stylesheet' href='/stylesheets/catalogue.css' />
    <link rel='stylesheet' href='/stylesheets/addBlog.css' />

</head>
<body>
    <div id="login">
        <% include ../menu %>
    </div>
    <div id="nav">
        <li>HOME&nbsp;»&nbsp;</li>
        <li><a href="/catalogue">档案&nbsp;</a>»&nbsp;</li>
        <li>书写日志</li>
    </div>
    <form class="form-search">
        <div class="title" >
            <input id="title" class=" search-query bnone " required placeholder="请输入题目"/>
            <span class="help-inline">*</span>
        </div>
        <div id="write" class="write">
            <textarea name="writeIn" id="writeIn" wrap="hard" rows="10" cols="30"></textarea>
            <div id="myBut">
                <input type="button" class=" btn btn-primary writeCode" data-toggle ="modal" data-target="#code" value="写代码"/>
                <input id="preRead" type="button" class="fr btn btn-primary" value="预览"/>
            </div>
        </div>
    </form>
    <div id="show" ></div>
    <div class="modal fade hide" id="code">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 id="myModalLabel">写代码</h4>
        </div>
        <div id="codeContent" class="modal-body">
            <textarea name="writeCodeValue" id="writeCodeValue" class=" noResize" wrap="hard" rows="10" cols="30"></textarea>
        </div>
        <div class="myButton modal-footer">
            <input id="confirm" type="button" class="btn btn-primary" data-dismiss="modal" value="确定" />
            <input id="quit" type="button"  class="btn btn-primary " data-dismiss="modal" aria-hidden="true" value="取消" />
        </div>
    </div>
    <div class="tc">
        <input id="save" type="button" class="hide btn btn-primary"  value="保存"/>
    </div>
</body>
<% include ../footer.ejs %>
<script>
    seajs.use("/javascripts/addBlog.js");
</script>
<script type="text/x-jsrender" id="baseMassage">
    <div id="MyTitle">{{:title}}</div>
    <p id="author" class="mt10 c787CA8">iS Defined By {{:author}}</p>
    <p id="time" class="mt10 c787CA8 border-col">{{:currentTime}}</p>

</script>
<script type="text/x-jsrender" id="valueMassage">
    {{if code==0}}
        <div class="mt10 common">{{:content}} <input type="button"  class=" hide remove fr pl20 pr20 pt5 pb5 wheat bnone" value="remove" /></div>
    {{else code==1}}
         <div class="mt10 special"><code>{{:content}} </code>
    {{/if}}
</script>
</html>